<%- include("../partials/header") %>
<link  rel="stylesheet" type="text/css" href="/stylesheets/login.css" >
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container" >
        <div class="img-container">
            <img class="back" src="/img/mobile.svg" >
        </div>
        <div class="form">
            <form action="/login" method="POST">
                <div class="avt"><img class="avatar" src="/img/avatar.svg"></div>
                <div class="head"><h2>Welcome</h2></div>
                <div class="form-group">
                    <input class="input" name="username" autocomplete="off" type="text" required>
                    <label for="username">
                        <span class="label"><i class="fas fa-user"></i>  Username</span>
                    </label>
                </div>
                <div class="form-group">
                    <input class="input" name="password" autocomplete="off" type="password" required>
                    <label for="password">
                        <span class="label"><i class="fas fa-lock"></i>  Password</span>
                    </label>
                </div>

                <div class="form-check">
                    <input id ="admin" name="admin" type="checkbox" value="admin">
                    <label for="admin">I'am an Admin</label>
                </div>
                <input type="submit" class="btn" value="Login">
            </form>
        </div>
    </div>
