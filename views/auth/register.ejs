<%- include("../partials/header") %>
<link  rel="stylesheet" type="text/css" href="stylesheets/form.css" >
</head>
<body>
    <h1 id="form-head"><i class="fas fa-user-plus fa-sm"></i> Register</h1>
    <div class="container" id="form">
        <form action="/register" method="POST">
            <div class="form-group">
                <label >Email address</label>
                <input name="email" type="email" placeholder="Email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">College</label>
                <input name="college" type="text" placeholder="College name">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">University</label>
                <input name="university" type="text" placeholder="University name">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Username</label>
                <input name="username"type="text" placeholder="Username">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input name="password" type="password" >
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Admin code</label>
                <input name="adminCode" type="password" placeholder="Enter Admin Code (Optional)">
            </div>
            <button type="submit" >Submit</button>
        </form>
    </div>
<%- include("../partials/footer") %>