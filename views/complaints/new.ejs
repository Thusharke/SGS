<%- include("../partials/header") %>
<link  rel="stylesheet" type="text/css" href="stylesheets/form.css" >
</head>
<body>
    <h1 id="form-head"><i class="fas fa-user-plus fa-sm"></i>Add Complaint</h1>
    <div class="container" id="form">
        <form action="/complaint" method="POST">
            <div class="form-group">
                <label>Department</label>
                <input name="department"type="text" placeholder="Department">
            </div>
            <div class="form-group">
                <label>Category</label>
                <input name="category"type="text" placeholder="Category">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" rows="6" placeholder="Describe your topic (HTML Tags are accepted)" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
<%- include("../partials/footer") %>